<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--顶部-->
    <include
        android:id="@+id/layout_top1"
        layout="@layout/layout_main_left_top"></include>

    <include
        layout="@layout/layout_main_left_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom1"
        android:layout_below="@+id/layout_top1"></include>

    <!--底部-->
    <include
        android:id="@+id/layout_bottom1"
        layout="@layout/layout_main_left_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>